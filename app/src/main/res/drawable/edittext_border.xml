<!-- res/drawable/edittext_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <!-- Define the background color and border for the focused state -->
            <solid android:color="@color/white" /> <!-- Background color -->
            <stroke
                android:width="1.5dp"
            android:color="#000000" /> <!-- Border color -->
            <corners android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- Padding to create space between text and border -->
        </shape>
    </item>
    <!-- Default (unfocused) state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Define the background color and border for the default state -->
            <solid android:color="#FFFFFF" /> <!-- Background color -->
            <stroke
                android:width="1dp"
            android:color="#BDC1BD" /> <!-- Border color -->
            <corners android:radius="8dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" /> <!-- Padding to create space between text and border -->
        </shape>
    </item>
</selector>






